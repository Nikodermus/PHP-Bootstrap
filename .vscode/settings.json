{
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "eslint.autoFixOnSave": true,
    "prettier.disableLanguages": ["javascript", "javascriptreact"],
    "eslint.options": {
        "extensions": [".php", ".js", ".vue", ".jsx", "ts", "tsx"],
        "configFile": "<PATH_TO_DIR>/.eslintrc"
    }
}
